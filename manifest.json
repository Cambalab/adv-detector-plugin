{
  "name": "Publielectoral Plugin",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Escanea la publicidad que aparece en tu cuenta de Facebook",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "icons/icon.png",
      "38": "icons/icon.png"
    },
    "default_title": "Publielectoral Plugin",
    "default_popup": "popup.html"
  }
}
